{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Decommissioning lighting device reply schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "brand": { "type": "string" },
      "power": { "type": "string" },
      "lumens": { "type": "string" },
      "lightTemperatureKelvin": { "type": "number" },
      "resourceMs": { "type": "number" },
      "price": { "type": "string" },
      "currency": { "type": "string" },
      "sellersWebsite": { "type": "string" },
      "images": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "uniqueItems": true
      },
      "placeOfInstallation": { "type": "string" },
      "state": {
        "type": "string",
        "enum": ["ON", "OFF", "IN_STOCK", "DECOMMISSIONED"]
      },
      "history": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "placeOfInstallation": { "type": "string" },
            "turnedOnAt": { "type": "string" },
            "turnedOffAt": { "type": "string" },
            "workedMs": { "type": "number" }
          },
          "additionalProperties": false,
          "required": ["placeOfInstallation", "turnedOnAt", "turnedOffAt", "workedMs"]
        }
      },
      "createdAt": { "type": "string" },
      "updatedAt": { "type": "string" }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "name",
      "brand",
      "power",
      "lumens",
      "lightTemperatureKelvin",
      "resourceMs",
      "price",
      "currency",
      "sellersWebsite",
      "images",
      "placeOfInstallation",
      "state",
      "history",
      "createdAt",
      "updatedAt"
    ]
  }
}
