{
  "name": "butler-backend",
  "private": true,
  "scripts": {
    "start": "nodemon --config nodemon.json --inspect=0.0.0.0:9229 src/index.ts | pino-pretty -c",
    "test": "jest --no-cache",
    "build": "del dist && tsc --project ./tsconfig.build.json",
    "compile:schemas": "json2ts -i ./src/interfaces/http/schemas -o ./src/interfaces/http/types",
    "ncu:outdated": "npm-check-updates",
    "ncu:upgrade": "npm-check-updates -u --target minor",
    "prepare": "yarn compile:schemas"
  },
  "engines": {
    "node": ">=16.4.0",
    "npm": ">=8.3.1"
  },
  "dependencies": {
    "abort-controller-x": "^0.2.6",
    "dotenv": "^14.2.0",
    "fastify": "^3.27.4",
    "fastify-helmet": "^7.0.1",
    "fastify-metrics": "^8.0.0",
    "fastify-plugin": "^3.0.1",
    "fastify-swagger": "^5.1.0",
    "http-status-codes": "^2.2.0",
    "mongodb": "^4.2.1",
    "node-abort-controller": "^3.0.1",
    "pino": "^7.8.0",
    "prom-client": "^14.0.1",
    "rethinkdb-ts": "^2.4.18",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.0.3",
    "@types/mocha": "^9.0.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^16.11.26",
    "@types/uuid": "^8.3.4",
    "del-cli": "^4.0.1",
    "jest": "^27.3.1",
    "json-schema-to-typescript": "^10.1.5",
    "nodemon": "^2.0.15",
    "npm-check-updates": "^12.0.2",
    "pino-pretty": "^7.5.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.6.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  }
}
